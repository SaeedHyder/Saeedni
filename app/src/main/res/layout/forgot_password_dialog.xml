<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/roundshapelayout"
              android:gravity="center"
              android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="@dimen/x300"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/x5"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15"
        >


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:src="@drawable/bluelogo"

            />

        <com.ingic.saeedni.ui.views.AnyTextView
            android:id="@+id/txt_thankYou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="@string/forgot_password_dialog"
            android:textColor="@color/s_font_color_blue"
            android:textSize="20sp"
            app:typeface="Roboto-Regular.ttf"/>


        <com.ingic.saeedni.ui.views.AnyTextView
            android:id="@+id/txt_recive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:alpha="0.7"
            android:gravity="center_horizontal"
            android:text="@string/contact_admin_message"
            android:textColor="@color/dark_grey"
            android:textSize="15sp"
            app:typeface="Roboto-Regular.ttf"/>

        <com.ingic.saeedni.ui.views.AnyTextView
            android:id="@+id/txt_number_forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/x10"
            android:gravity="center_horizontal"
            android:text="retrival +97xxxxxxxxxx"
            android:textColor="@color/dark_grey"
            android:textSize="15sp"
            app:typeface="Roboto-Regular.ttf"/>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/x3"
        android:layout_marginEnd="@dimen/x3"
        android:layout_marginBottom="@dimen/x3"
        android:layout_alignBottom="@+id/textLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x5"
        android:orientation="vertical"
        app:cardCornerRadius="1dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/two_round_button"
            android:text="@string/close"
            android:textAllCaps="false"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/x16"/>
    </android.support.v7.widget.CardView>
</LinearLayout>
