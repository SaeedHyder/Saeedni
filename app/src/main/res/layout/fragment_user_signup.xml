<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btn_image"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x25"
            android:layout_marginTop="@dimen/x25"
            android:src="@drawable/camerawithcircle"/>

        <LinearLayout
            android:id="@+id/ll_textFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:background="@drawable/boxcentershape">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x20"
                    android:src="@drawable/name"/>

                <com.ingic.saeedni.ui.views.AnyEditTextView
                    android:id="@+id/edtname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_toEndOf="@+id/img_profile"
                    android:layout_toRightOf="@+id/img_profile"
                    android:background="@android:color/transparent"
                    android:drawablePadding="@dimen/x10"
                    android:gravity="start"
                    android:hint="@string/name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/x14"
                    app:testType="email"
                    app:typeface="Roboto-Regular.ttf"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginEnd="@dimen/x20"
                android:layout_marginStart="@dimen/x20"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/boxcentershape">

                <ImageView
                    android:id="@+id/img_phone"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x20"
                    android:src="@drawable/contact"/>

                <com.ingic.saeedni.ui.views.AnyEditTextView
                    android:id="@+id/edtnumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/x20"
                    android:layout_marginStart="@dimen/x20"
                    android:layout_toEndOf="@+id/img_phone"
                    android:background="@android:color/transparent"
                    android:drawablePadding="@dimen/x10"
                    android:gravity="start|center_vertical"
                    android:hint="@string/phone_number"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="50"

                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/x14"
                    app:typeface="Roboto-Regular.ttf"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/boxcentershape">

                <ImageView
                    android:id="@+id/img_email"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x20"
                    android:src="@drawable/email"/>

                <com.ingic.saeedni.ui.views.AnyEditTextView
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_toEndOf="@+id/img_email"
                    android:background="@android:color/transparent"
                    android:drawablePadding="@dimen/x10"
                    android:gravity="start|center_vertical"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/x14"
                    app:testType="email"
                    app:typeface="Roboto-Regular.ttf"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/boxcentershape">

                <ImageView
                    android:id="@+id/img_password"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x20"
                    android:src="@drawable/pass"/>

                <com.ingic.saeedni.ui.views.AnyEditTextView
                    android:id="@+id/edtpassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/img_password"
                    android:background="@android:color/transparent"
                    android:drawablePadding="@dimen/x10"
                    android:gravity="start|center_vertical"
                    android:hint="@string/password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="50"

                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/x14"
                    app:testType="email"
                    app:typeface="Roboto-Regular.ttf"/>
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/boxcentershape">

                <ImageView
                    android:id="@+id/img_address"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x20"
                    android:src="@drawable/address_signup"/>

                <com.jota.autocompletelocation.AutoCompleteLocation
                    android:id="@+id/edtadress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x5"

                    android:layout_toEndOf="@+id/img_address"
                    android:background="@android:color/transparent"
                    android:drawablePadding="@dimen/x10"
                    android:gravity="start|center_vertical"
                    app:hint_text="@string/address_"
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/x14"
                    app:testType="email"
                    app:typeface="Roboto-Regular.ttf"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/boxcentershape">

                <ImageView
                    android:id="@+id/img_address2"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/x20"
                    android:src="@drawable/address"/>
                <com.ingic.saeedni.ui.views.AnySpinner
                    android:id="@+id/spnCity"
                    android:layout_toEndOf="@+id/img_address2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_marginLeft="@dimen/x13"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_marginBottom="@dimen/x5"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/x15"
                android:background="@drawable/yellow_button_background"
                android:text="@string/sign_up"
                android:textColor="@color/white"/>

            <com.ingic.saeedni.ui.views.AnyTextView
                android:id="@+id/btn_tnc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center_horizontal"
                android:text="@string/terms_conditons"
                android:textColor="@color/app_blue"
                android:textSize="15sp"
                app:typeface="Roboto-Regular.ttf"/>

        </LinearLayout>


    </LinearLayout>
</ScrollView>