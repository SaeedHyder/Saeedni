<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollview_bigdaddy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.55"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/s_headerimage"/>

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x150"
            android:layout_centerInParent="true"
            android:src="@drawable/s_logo"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.55"
        android:orientation="vertical"
        android:background="@color/white_dirty"
        android:paddingEnd="@dimen/x20"
        android:paddingStart="@dimen/x20">


        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/boxcentershape"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_emailIcon"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/x27"
                android:src="@drawable/email"/>

            <com.ingic.saeedni.ui.views.AnyEditTextView
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x20"
                android:layout_marginStart="@dimen/x12"
                android:layout_marginTop="@dimen/x2"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x14"
                app:testType="email"
                app:typeface="Roboto-Regular.ttf"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:gravity="center_vertical"
            android:background="@drawable/boxcentershape"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_passwordIcon"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x20"
                android:layout_marginStart="@dimen/x25"
                android:src="@drawable/pass"/>


            <com.ingic.saeedni.ui.views.AnyEditTextView
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x20"
                android:layout_marginStart="@dimen/x10"
                android:background="@android:color/transparent"
                android:drawablePadding="@dimen/x10"
                android:gravity="start"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLength="50"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x14"
                app:testType="alphaNumeric"
                app:typeface="Roboto-Regular.ttf"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x25"
            android:layout_marginBottom="@dimen/x10"
            android:orientation="horizontal">

            <com.ingic.saeedni.ui.views.AnyTextView
                android:id="@+id/txtForgotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/forgot_password"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Regular.ttf"/>

            <com.ingic.saeedni.ui.views.AnyTextView
                android:id="@+id/txt_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x10"
                android:gravity="center"
                android:text="@string/reset_now"
                android:textColor="@color/price_color"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Regular.ttf"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:background="@drawable/yellow_button_background"
            android:gravity="center"
            android:text="@string/login"
            android:textAllCaps="true"
            android:textColor="@color/white"/>


    </LinearLayout>


</LinearLayout>