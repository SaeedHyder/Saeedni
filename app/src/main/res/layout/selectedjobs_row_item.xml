<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:background="@drawable/boxcentershape"
                android:orientation="vertical">

    <com.ingic.saeedni.ui.views.AnyTextView
        android:id="@+id/txt_jobselectedtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/delete_text"
        android:layout_toStartOf="@+id/delete_text"
        android:maxLines="1"
        android:paddingBottom="@dimen/x10"
        android:textAlignment="gravity"
        android:layout_alignParentLeft="true"
        android:gravity="left"
        android:layout_marginLeft="@dimen/x10"
        android:paddingTop="@dimen/x10"
        android:text="@string/selected_jobs"
        android:textSize="@dimen/x15"
        android:textStyle="normal"
        app:typeface="Roboto-Regular.ttf"
        />

    <ImageView
        android:id="@+id/delete_text"
        android:layout_width="@dimen/x20"
        android:layout_height="@dimen/x20"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/x15"
        android:layout_marginStart="@dimen/x15"
        android:src="@drawable/cross"/>
</RelativeLayout>