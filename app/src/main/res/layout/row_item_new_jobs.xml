                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="3dp"
                                    app:cardMaxElevation="5dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_JobDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:orientation="horizontal">

            <com.ingic.saeedni.ui.views.AnyTextView
                android:id="@+id/txt_jobNameHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x8"
                android:layout_marginStart="@dimen/x8"
                android:text="@string/job"
                android:textColor="@color/app_blue"
                android:textSize="@dimen/x14"
                android:textStyle="bold"
                app:typeface="Roboto-Regular.ttf"/>

            <com.ingic.saeedni.ui.views.AnyTextView
                android:id="@+id/txt_jobName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repairing of Water Pumps"
                android:textColor="@color/gray"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Regular.ttf"/>


        </LinearLayout>

