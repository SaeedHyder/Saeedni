                android:textColor="@color/app_blue"
                android:textSize="@dimen/x14"
                android:textStyle="bold"
                app:typeface="Roboto-Regular.ttf"/>

            <com.ingic.saeedni.ui.views.AnyTextView
                android:id="@+id/txt_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Only"
                android:textColor="@color/gray"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Regular.ttf"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:orientation="horizontal">

            <com.ingic.saeedni.ui.views.AnyTextView
                android:id="@+id/txt_AddressHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x8"
                android:layout_marginStart="@dimen/x8"
                android:text="@string/location"
                android:textColor="@color/app_blue"
                android:textSize="@dimen/x14"
                android:textStyle="bold"
                app:typeface="Roboto-Regular.ttf"/>

            <com.ingic.saeedni.ui.views.AnyTextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dubai Marine,Near Marina"
                android:textColor="@color/gray"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Regular.ttf"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_preferred_dateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:orientation="horizontal">

            <com.ingic.saeedni.ui.views.AnyTextView
                android:id="@+id/txt_preferred_dateTimeHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x8"
                android:layout_marginStart="@dimen/x8"
                android:text="@string/preferred_date_time"
                android:textColor="@color/app_blue"
                android:textSize="@dimen/x14"
                android:textStyle="bold"
                app:typeface="Roboto-Regular.ttf"/>

            <com.ingic.saeedni.ui.views.AnyTextView
                android:id="@+id/txt_preferred_dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_22_feb_2017_02_30_pm"
                android:textColor="@color/gray"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Regular.ttf"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_EstimatedQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/x5"
            android:orientation="horizontal">

            <com.ingic.saeedni.ui.views.AnyTextView
                android:id="@+id/txt_estimatedQuoteHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x8"
                android:layout_marginStart="@dimen/x8"
                android:text="@string/Estimated_Quote"
                android:gravity="start"
                android:textColor="@color/app_blue"
                android:textSize="@dimen/x14"
                android:textStyle="bold"
                app:typeface="Roboto-Regular.ttf"/>

            <com.ingic.saeedni.ui.views.AnyTextView
                android:id="@+id/txt_estimatedQuote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AED 120 to 150"
                android:textColor="@color/price_color"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Regular.ttf"/>


        </LinearLayout>





