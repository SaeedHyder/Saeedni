<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/roundshapelayout"
              android:gravity="center"
              android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="@dimen/x300"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/x5"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15"
        >


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:src="@drawable/bluelogo"

            />

        <com.ingic.saeedni.ui.views.AnyTextView
            android:id="@+id/txt_thankYou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/are_you_sure"

            android:textColor="@color/s_font_color_blue"
            android:textSize="20sp"
            android:textStyle="bold"
            app:typeface="Roboto-Regular.ttf"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/square_border"
            android:gravity="center"
            android:orientation="horizontal">

            <com.ingic.saeedni.ui.views.AnyTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/aed"

                android:textColor="@color/price_color"
                android:textSize="20sp"
                android:textStyle="bold"
                app:typeface="Roboto-Regular.ttf"/>

            <com.ingic.saeedni.ui.views.AnyTextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingEnd="@dimen/x1"
                android:paddingStart="@dimen/x5"
                android:text="120"

                android:textColor="@color/price_color"
                android:textSize="20sp"
                android:textStyle="bold"
                app:typeface="Roboto-Regular.ttf"/>

            <com.ingic.saeedni.ui.views.AnyTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="/-"

                android:textColor="@color/price_color"
                android:textSize="20sp"
                android:textStyle="bold"
                app:typeface="Roboto-Regular.ttf"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x10"
            android:visibility="gone"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.ingic.saeedni.ui.views.AnyTextView
                android:id="@+id/txt_rate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/x5"
                android:layout_marginStart="@dimen/x5"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x10"
                android:text="@string/rate_user"
                android:textColor="@color/s_font_color_blue"
                android:textSize="@dimen/x12"
                android:textStyle="bold"
                app:typeface="Roboto-Regular.ttf"/>

            <com.ingic.saeedni.ui.views.CustomRatingBar
                android:id="@+id/rbAddRating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="@dimen/x5"
                android:layout_marginStart="@dimen/x5"
                android:layout_weight="1.3"
                android:alpha="0.7"
                android:gravity="center"
                android:textSize="@dimen/x15"
                android:textStyle="bold"
                app:stars="1"
                app:typeface="Roboto-Regular.ttf"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/textLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x5"
            android:orientation="vertical"
            app:cardCornerRadius="1dp"
            app:cardElevation="1dp"
            app:cardMaxElevation="1dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/two_round_button"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/app_blue"
                android:textSize="@dimen/x16"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>
