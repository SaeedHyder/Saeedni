<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/x10">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">

            <com.ingic.saeedni.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/pushNotificationTitle"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:textStyle="normal"
                app:typeface="Roboto-Regular.ttf" />

            <Switch
                android:id="@+id/swt_continous_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:checked="true" />


        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@color/dark_grey" />

        <FrameLayout
            android:id="@+id/btnChangePhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">

            <com.ingic.saeedni.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/changePhoneNumber"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:textStyle="normal"
                app:typeface="Roboto-Regular.ttf" />

            <ImageView
                android:id="@+id/imgPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/x10"
                android:src="@drawable/right_arrow" />


        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@color/dark_grey" />

        <FrameLayout
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">

            <com.ingic.saeedni.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/change_password"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:textStyle="normal"
                app:typeface="Roboto-Regular.ttf" />

            <ImageView
                android:id="@+id/imgPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/x10"
                android:src="@drawable/right_arrow" />


        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@color/dark_grey" />

        <FrameLayout
            android:id="@+id/btnContact"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">

            <com.ingic.saeedni.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/contactUs"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:textStyle="normal"
                app:typeface="Roboto-Regular.ttf" />

            <ImageView
                android:id="@+id/imgContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/x10"
                android:src="@drawable/right_arrow" />


        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@color/dark_grey" />

        <FrameLayout
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">

            <com.ingic.saeedni.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/about_app"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:textStyle="normal"
                app:typeface="Roboto-Regular.ttf" />

            <ImageView
                android:id="@+id/imgAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/x10"
                android:src="@drawable/right_arrow" />


        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@color/dark_grey" />
        <FrameLayout
            android:id="@+id/btnTermsCondition"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50">

            <com.ingic.saeedni.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:maxLines="1"
                android:text="@string/terms_conditons"
                android:textColor="@color/dark_grey"
                android:textSize="15sp"
                android:textStyle="normal"
                app:typeface="Roboto-Regular.ttf" />

            <ImageView
                android:id="@+id/imgTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/x10"
                android:src="@drawable/right_arrow" />


        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@color/dark_grey" />


    </LinearLayout>
</ScrollView>