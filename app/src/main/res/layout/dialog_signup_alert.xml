<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/roundshapelayout"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="@dimen/x300"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/x12">


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:src="@drawable/bluelogo"

            />

        <!-- <com.app.yellowcap.ui.views.AnyTextView
             android:id="@+id/txt_thankYou"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/thank_you"
             android:gravity="center_horizontal"

             android:textColor="@color/black"
             android:textSize="20sp"
             android:textStyle="bold"
             app:typeface="Roboto-Regular.ttf" />
 -->

        <com.ingic.saeedni.ui.views.AnyTextView
            android:id="@+id/txt_recive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:alpha="0.7"
            android:gravity="center_horizontal"
            android:text="@string/registration_message"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:typeface="Roboto-Regular.ttf"/>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/textLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x5"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/x3"
        android:layout_marginEnd="@dimen/x3"
        android:layout_marginBottom="@dimen/x3"
        app:cardCornerRadius="1dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/two_round_button"
            android:text="@string/proceed"
            android:textAllCaps="false"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/x16"/>

    </android.support.v7.widget.CardView>


</LinearLayout>